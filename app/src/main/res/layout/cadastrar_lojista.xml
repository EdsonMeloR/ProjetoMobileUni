<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarLojistaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
        android:layout_width="700px"
        android:layout_height="150px"
        android:hint="ID"
        android:id="@+id/edt_id_frmcadloj"
        android:inputType="number"
        android:enabled="false"/>

        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="CPF"
            android:id="@+id/edt_cpf_frmcadloj"
            android:inputType="number"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Nome"
            android:id="@+id/edt_nome_frmcadloj"
            android:inputType="text"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Senha"
            android:id="@+id/edt_senha_frmcadloj"
            android:inputType="textPassword"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Email"
            android:id="@+id/edt_email_frmcadloj"
            android:inputType="textEmailAddress"/>
        <Button
            android:layout_width="600px"
            android:layout_height="150px"
            android:text="Cadastrar"
            android:onClick="btn_cadastrar_frmcadloj"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>