<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalizarCompraActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Nome"
        android:textSize="25dp"
        android:id="@+id/tv_finishbuy_nome"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="PreÃ§o"
        android:textSize="25dp"
        android:textAlignment="center"
        android:id="@+id/tv_finishbuy_preco"/>
    <TextView
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:hint="Fabricante"
        android:textSize="25dp"
        android:id="@+id/tv_finishbuy_fabric"/>
    <TextView
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:hint="Codigo Barras"
        android:textSize="25dp"
        android:id="@+id/tv_finishbuy_codbar"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Estoque Atual"
        android:textSize="25dp"
        android:id="@+id/tv_finishbuy_qtd"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Digite a quantidade a se comprar"
        android:id="@+id/edt_qtd_finshbuy"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_valor_final"
        android:textAlignment="center"
        android:textSize="25dp"
        android:hint="R$00,00"
        android:layout_margin="50px"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:onClick="btnFinalizarCompra"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>