<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarProdutoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="ID"
            android:id="@+id/edt_id_frmcadproduto"
            android:enabled="false"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Nome"
            android:id="@+id/edt_nome_frmcadproduto"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Quantidade"
            android:id="@+id/edt_quantidade_frmcadproduto"
            android:inputType="number"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Valor"
            android:id="@+id/edt_valor_frmcadprod"
            android:inputType="numberDecimal"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Fabricante"
            android:id="@+id/edt_fabricante_frmcadprod"/>
        <EditText
            android:layout_width="700px"
            android:layout_height="150px"
            android:hint="Cod. Barras"
            android:id="@+id/edt_codbarras_frmcadprod"
            android:inputType="number"/>
        <Button
            android:layout_width="600px"
            android:layout_height="150px"
            android:text="Cadastrar"
            android:onClick="btn_cadastrar_frmcadprod"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>